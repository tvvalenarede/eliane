<body>

<header>TVVALENAREDE</header>

<div id="news">Carregando notícias...</div>

<script>
async function carregarNoticias() {
    try {
        const url = "https://api.currentsapi.services/v1/latest-news?apiKey=demo";
        const resposta = await fetch(url);
        const dados = await resposta.json();

        const container = document.getElementById("news");
        container.innerHTML = "";

        dados.news.slice(0, 10).forEach(item => {
            container.innerHTML += `
                <div class="item">
                    <h3>${item.title}</h3>
                    <p>${item.description || "Sem descrição."}</p>
                    <a href="${item.url}" target="_blank">Ler notícia completa</a>
                </div>
            `;
        });
    } catch (error) {
        document.getElementById("news").innerHTML =
            "Erro ao carregar notícias. Tente novamente mais tarde.";
    }
}

carregarNoticias();
setInterval(carregarNoticias, 300000); // atualiza a cada 5 minutos
</script>

</body>
</html>
